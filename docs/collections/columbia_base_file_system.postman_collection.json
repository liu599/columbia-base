{
	"info": {
		"_postman_id": "4b6a8c43-4f9e-4e4c-8f9a-1f8e8f8f8f8f",
		"name": "Columbia Base File System",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "User Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.data && jsonData.data.token) {",
									"    pm.environment.set(\"token\", jsonData.data.token);",
									"    pm.environment.set(\"userId\", jsonData.data.userId);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"admin\",\n    \"password\": \"123456\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/user/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"user",
								"login"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "File System",
			"item": [
				{
					"name": "Upload File (接口1)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "{{token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "file",
									"type": "file",
									"src": []
								},
								{
									"key": "userId",
									"value": "{{userId}}",
									"type": "text"
								},
								{
									"key": "metadata",
									"value": "{\"module\": \"avatar\", \"description\": \"User avatar\"}",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/file/upload",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"file",
								"upload"
							]
						}
					},
					"response": []
				},
				{
					"name": "Get File (接口2)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "{{token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"userId\": {{userId}},\n    \"fileUuid\": \"your_file_uuid_here\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/file/get",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"file",
								"get"
							]
						}
					},
					"response": []
				},
				{
					"name": "Update Metadata (接口3)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "{{token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"fileUuid\": \"your_file_uuid_here\",\n    \"newMetadata\": \"{\\\"module\\\": \\\"avatar\\\", \\\"status\\\": \\\"verified\\\"}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/file/update",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"file",
								"update"
							]
						}
					},
					"response": []
				},
				{
					"name": "Delete File (接口4)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "{{token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"fileUuid\": \"your_file_uuid_here\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/file/delete",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"file",
								"delete"
							]
						}
					},
					"response": []
				}
			]
		}
	],
