{
  "info": {
    "name": "Columbia Base Product API Collection",
    "description": "API collection for Columbia Base backend - User and Product Activation System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "user_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "admin_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "admin_id",
      "value": "1",
      "type": "string"
    },
    {
      "key": "product_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "activation_code",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{user_token}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// This script runs before each request",
          "// You can add common setup here if needed"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Save admin_token from login response",
          "if (pm.response.code === 200 && pm.request.url.path.join('/').includes('/login')) {",
          "    const jsonData = pm.response.json();",
          "    if (jsonData.token && jsonData.userId) {",
          "        const userId = jsonData.userId;",
          "        if (userId >= 1 && userId <= 10) {",
          "            pm.collectionVariables.set('admin_token', jsonData.token);",
          "            pm.collectionVariables.set('admin_id', userId.toString());",
          "            console.log('Admin token saved: ' + jsonData.token);",
          "        } else {",
          "            pm.collectionVariables.set('user_token', jsonData.token);",
          "            pm.collectionVariables.set('user_id', userId.toString());",
          "            console.log('User token saved: ' + jsonData.token);",
          "        }",
          "    }",
          "}",
          "",
          "// Save product_id from product creation",
          "if (pm.response.code === 200 && pm.request.url.path.join('/').includes('/admin/product/save')) {",
          "    const jsonData = pm.response.json();",
          "    if (jsonData.data && jsonData.data.id) {",
          "        pm.collectionVariables.set('product_id', jsonData.data.id.toString());",
          "        console.log('Product ID saved: ' + jsonData.data.id);",
          "    }",
          "}",
          "",
          "// Save user_id from registration",
          "if (pm.response.code === 200 && pm.request.url.path.join('/').includes('/register')) {",
          "    const jsonData = pm.response.json();",
          "    if (jsonData.data && jsonData.data.userId) {",
          "        pm.collectionVariables.set('user_id', jsonData.data.userId.toString());",
          "        console.log('User ID saved: ' + jsonData.data.userId);",
          "    }",
          "}",
          "",
          "// Save activation_code from batch create",
          "if (pm.response.code === 200 && pm.request.url.path.join('/').includes('/batch-create')) {",
          "    const jsonData = pm.response.json();",
          "    if (jsonData.data && jsonData.data.codes && jsonData.data.codes.length > 0) {",
          "        pm.collectionVariables.set('activation_code', jsonData.data.codes[0]);",
          "        console.log('Activation code saved: ' + jsonData.data.codes[0]);",
          "    }",
          "}"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "Admin (Login & Setup)",
      "item": [
        {
          "name": "Admin Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"account\": \"\",\n  \"password\": \"\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/user/login",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "user", "login"]
            },
            "description": "Login as admin (requires userId in range 1-10). After login, the response contains a token that should be saved to admin_token variable from Tests tab."
          },
          "response": []
        },
        {
          "name": "Create Product",
